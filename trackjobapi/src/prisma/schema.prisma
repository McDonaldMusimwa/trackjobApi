generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "library"
  moduleFormat="esm"
  dataProxy = false
  previewFeatures = []
  // force CJS
  jsEngine = "node-api"
}

datasource db {
  provider = "sqlite"
}
model User {
  id            String    @id // Clerk user ID
  email         String    @unique
  name          String?
  avatar        String?
  emailVerified Boolean   @default(false)

  jobs          Job[]
  profile       Profile?
  applications  Application[]
  interviews    Interview[]
  notes         Note[]
  documents     Document[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String?
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

enum JobStatus {
  APPLIED
  INTERVIEWING
  PENDING
  OFFER
  REJECTED
  SAVED
}

model Job {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  companyname String
  status      JobStatus @default(APPLIED)
  jobtitle    String
  joblink     String?  // Make optional since not all jobs have a link
  comments    String?
  published   Boolean  @default(false)

  author       User?       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId     String?     // Clerk user ID
  applications Application[]
  interviews   Interview[]
  notes        Note[]
}

model Application {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String    // Clerk user ID
  job           Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId         Int
  appliedDate   DateTime  @default(now())
  status        JobStatus @default(APPLIED)
  coverLetter   String?
  resume        String?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Interview {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String    // Clerk user ID
  job           Job?      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId         Int?
  interviewDate DateTime
  interviewType String?   // e.g., "Phone", "Video", "In-person"
  interviewer   String?
  notes         String?
  feedback      String?
  status        String?   // e.g., "Scheduled", "Completed", "Cancelled"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum NoteCategory {
  JOB_SEARCH
  INTERVIEW_PREP
  NETWORKING
  SKILLS
  REFLECTION
  OTHER
}

model Note {
  id            Int          @id @default(autoincrement())
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String       // Clerk user ID
  job           Job?         @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId         Int?
  title         String
  content       String
  category      NoteCategory @default(OTHER)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

enum DocumentType {
  resume
  coverLetter
}

model Document {
  id          Int          @id @default(autoincrement())
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String       // Clerk user ID
  name        String       // Original file name
  type        DocumentType // resume or coverLetter
  url         String       // Public URL to access the file
  s3Key       String       // S3 object key for deletion
  size        Int          // File size in bytes
  uploadedAt  DateTime     @default(now())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
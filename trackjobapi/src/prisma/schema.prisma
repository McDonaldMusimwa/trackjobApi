generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "library"
  moduleFormat="esm"
  dataProxy = false
  previewFeatures = []
  // force CJS
  jsEngine = "node-api"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String?
  password      String?   
  provider      String?   
  providerId    String?   
  avatar        String?
  emailVerified Boolean   @default(false)

  jobs          Job[]
  profile       Profile?
  applications  Application[]
  interviews    Interview[]
  notes         Note[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?  @updatedAt
}

model Profile {
  id     Int   @id @default(autoincrement())
  bio    String?
  user   User  @relation(fields: [userId], references: [id])
  userId Int   @unique
}

enum JobStatus {
  APPLIED
  INTERVIEWING
  PENDING
  OFFER
  REJECTED
  SAVED
}

model Job {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  companyname String
  status      JobStatus @default(APPLIED)
  jobtitle    String
  joblink     String
  comments    String?
  published   Boolean  @default(false)

  author       User?       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId     Int?
  applications Application[]
  interviews   Interview[]
  notes        Note[]
}

model Application {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int
  job           Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId         Int
  appliedDate   DateTime  @default(now())
  status        JobStatus @default(APPLIED)
  coverLetter   String?
  resume        String?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Interview {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int
  job           Job?      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId         Int?
  interviewDate DateTime
  interviewType String?   // e.g., "Phone", "Video", "In-person"
  interviewer   String?
  notes         String?
  feedback      String?
  status        String?   // e.g., "Scheduled", "Completed", "Cancelled"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Note {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int
  job           Job?      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId         Int?
  title         String
  content       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}